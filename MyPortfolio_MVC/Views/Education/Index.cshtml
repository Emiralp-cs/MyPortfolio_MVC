@model List<MyPortfolio_MVC.Models.TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
    //Ödev:Eğerki Eğitim Tablosunda Hiç Değer Yoksa Bootstrap Alert Kullanarak Herhangi Bir Değer Bulunmamaktadır İfadesini Göster.
}
<h2>Eğitim Hayatım</h2>
@{
    var Control = Model.Count;
    if (Control == 0)
    {
        <div class="alert alert-danger" role="alert">
            Değer Bulunamadı!
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">

            <tr>
                <th>#</th>
                <th>Okul Adı</th>
                <th>Bölüm</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>Derece</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>


            @foreach (var item in Model)
            {

                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.SchoolName</td>
                    <td>@item.Department</td>
                    <td>@item.StartDate.Value.ToShortDateString()</td>
                    <td>@(String.IsNullOrEmpty(item.EndDate.ToString()) ? "Devam Ediyor":item.EndDate.Value.ToShortDateString())</td>
                    <td>@item.Degree</td>
                    <td ><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-danger">Sil</a></td>
                    <td ><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-success">Güncelle</a></td>
                </tr>


            }

        </table>

        <br />

        <a href="/Education/CreateEducation" class="btn btn-outline-success" style="margin:15px">Yeni Eğitim Ekle</a>

    }
}










