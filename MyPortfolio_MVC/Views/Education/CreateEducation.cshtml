@model  MyPortfolio_MVC.Models.TblEducation
@{
    ViewBag.Title = "CreateEducation";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Yeni Eğitim Ekleme Sayfası</h2>

<form method="post">
    <label>Okul Adı</label>
    @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control", @style = "border-color:white" })
    @Html.ValidationMessageFor(x => x.SchoolName, "", new { @class = "text-danger" })
    <br />

    <label>Bölüm Adı</label>
    @Html.TextBoxFor(x => x.Department, new { @class = "form-control", @style = "border-color:white" })
    @Html.ValidationMessageFor(x => x.Department, "", new { @class = "text-danger" })
    <br />

    <label>Başlama Tarihi</label>
    <input type="date" name="StartDate" class="form-control" style="border-color:white;background-color:white" />
    @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })

    <br />

    <label>Bitiş Tarihi </label><span><strong> (Eğer Devam Ediyorsa Boş Bırakın)</strong></span>
    <input type="date" name="EndDate" class="form-control" style="border-color:white;background-color:white" />
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control", @style = "border-color:white" })
    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    <br />


    <label>Derece</label>
    <select name="Degree" class="form-control bg-dark" style="border-color:white">
        <option disabled>Seçiminizi Yapın</option>
        <option value="Önlisans">Önlisans</option>
        <option value="Lisans">Lisans</option>
        <option value="Yüksek Lisans">Yüksek Lisans</option>
    </select>
    <br />

    <button class="btn btn-outline-primary" style="margin:10px;margin-left:0px">Kaydet</button>


</form>



