@model MyPortfolio_MVC.Models.TblMessage
@{
    ViewBag.Title = "MessageDetail";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Mesaj İçeriği</h2>

<table class="table table-striped">


    <tr>
        <th>Gönderen Ad Soyad:</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Gönderen Email:</th>
        <td>@Model.Email</td>
    </tr>

    <tr>
        <th>Mesaj İçeriği</th>
        <td>@Model.MessageContent</td>
    </tr>


    <tr><th>Durum</th>
    <td><a href="/Message/MakeMessageRead/@Model.MessageId" class="btn btn-outline-primary">@(Model.IsRead == false ? "Okundu Olarak İşaretlensin mi ?":"Bu Mesaj Okundu")</a></td></tr>

</table>

<br />



<a href="/Message/Index" class="btn btn-outline-primary">Mesajlara Geri Dön</a>



