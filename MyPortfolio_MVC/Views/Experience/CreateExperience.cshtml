
@model  MyPortfolio_MVC.Models.TblExperience
@{
    ViewBag.Title = "CreateExperience";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Yeni Eğitim Ekleme Sayfası</h2>

<form method="post">
    <label>Şirket Adı</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", @style = "border-color:white" })
    @Html.ValidationMessageFor(x => x.CompanyName, "", new { @class = "text-danger" })
    <br />

    <label>Çalıştığınız Pozisyon</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @style = "border-color:white" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    <br />

    <label>Başlama Tarihi</label>
    <input type="date" name="StartDate" class="form-control" style="border-color:white;background-color:white" />
    @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })

    <br />

    <label>Bitiş Tarihi </label><span><strong> (Eğer Devam Ediyorsa Boş Bırakın)</strong></span>
    <input type="date" name="EndDate" class="form-control" style="border-color:white;background-color:white" />
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control", @style = "border-color:white" })
    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    <br />


    
    <br />

    <button class="btn btn-outline-primary" style="margin:10px;margin-left:0px">Kaydet</button>


</form>



