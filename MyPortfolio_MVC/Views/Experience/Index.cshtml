@model List<MyPortfolio_MVC.Models.TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
    
}
<h2>Deneyimlerim</h2>
@{
    var Control = Model.Count;
    if (Control == 0)
    {
        <div class="alert alert-danger" role="alert">
            Değer Bulunamadı!
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">

            <tr>
                <th>#</th>
                <th>Şirket Adı</th>
                <th>Çalıştığınız Pozisyon</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Açıklama</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>


            @foreach (var item in Model)
            {

                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.CompanyName</td>
                    <td>@item.Title</td>
                    <td>@item.StartDate.Value.ToShortDateString()</td>
                    <td>@(String.IsNullOrEmpty(item.EndDate.ToString()) ? "Devam Ediyor":item.EndDate.Value.ToShortDateString())</td>
                    <td>@item.Description</td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-success">Güncelle</a></td>
                </tr>


            }

        </table>

        <br />

        <a href="/Experience/CreateExperience" class="btn btn-outline-success" style="margin:15px">Yeni Deneyim Ekle</a>

    }
}










