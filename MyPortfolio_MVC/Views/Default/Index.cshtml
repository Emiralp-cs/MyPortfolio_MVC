@model MyPortfolio_MVC.Models.TblMessage
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js ss-preload" lang="en">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Luther</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Templates/luther-1.0.0/css/vendor.css">
    <link rel="stylesheet" href="~/Templates/luther-1.0.0/css/styles.css">

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Templates/luther-1.0.0/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Templates/luther-1.0.0/favicon-16x16.png">
    <link rel="manifest" href="site.webmanifest">

</head>

<body id="top">


    <!-- # preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader">
        </div>
    </div>


    <!-- # page wrap
    ================================================== -->
    <div class="s-pagewrap">

        <div class="circles">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>


        <!-- ## site header
        ================================================== -->
        <header class="s-header">

            <div class="header-mobile">
                <span class="mobile-home-link"><a href="index.html">Emir Alp</a></span>
                <a class="mobile-menu-toggle" href="#0"><span>Menu</span></a>
            </div>

            <div class="row wide main-nav-wrap">
                <nav class="column lg-12 main-nav">
                    <ul>
                        <li><a href="#" class="home-link">EMİR ALP </a></li>
                        <li class="current"><a href="#intro" class="smoothscroll">GİRİŞ</a></li>
                        <li><a href="#about" class="smoothscroll">HAKKIMDA</a></li>
                        <li><a href="#expertise" class="smoothscroll">UZMANLIKLARIM</a></li>
                        <li><a href="#experience" class="smoothscroll">DENEYİMLERİM</a></li>
                        <li><a href="#works" class="smoothscroll">PROJELERİM</a></li>
                        <li><a href="#testimonials" class="smoothscroll">REFERANSLARIM</a></li>
                        <li><a href="#contact" class="smoothscroll">İLETİŞİM</a></li>

                    </ul>
                </nav>
            </div>

        </header> <!-- end s-header -->
        <!-- ## main content
        ==================================================- -->
        <main class="s-content">


            <!-- ### intro
            ================================================== -->
            @Html.Action("DefaultBanner")
            <!-- Burada controller tanımlamamamızın sebebi bu viewin controllerında çalışıyor olmamız. -->
            <!-- end s-intro -->
            <!-- ### about
            ================================================== -->



            @Html.Action("DefaultAbout") <!-- about-info -->
            <!-- end about-expertise -->
            <!-- end s-about -->

            <section id="expertise" class="s-expertise target-section">


                <!-- about-info -->


                @Html.Action("DefaultExpertise") <!-- end about-expertise -->




            </section> <!-- end s-about -->

            <section id="experience" class="s-experience target-section">
                <div class="row about-timelines" data-animate-block>

                    <!-- end column -->
                    @Html.Action("DefaultExperience")
                    @Html.Action("DefaultEducation")
                    <!-- end column -->


                </div> <!-- end about-timelines -->
            </section>
            @Html.Action("DefaultProjects")

            <section id="testimonials" class="s-testimonials target-section">
                <div class="row about-timelines">
                    <div class="column lg-12" data-animate-block>
                        @Html.Action("DefaultTestimonials")
                    </div>
                </div>
            </section>



            @Html.Action("SendMessage")

        </main> <!-- end s-content -->
        <!-- ## footer
        ================================================== -->
        <footer class="s-footer">

            <div class="row">
                

                <div class="ss-go-top">
                    <a class="smoothscroll" title="Back to Top" href="#top">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill-rule="evenodd" clip-rule="evenodd"><path d="M11 2.206l-6.235 7.528-.765-.645 7.521-9 7.479 9-.764.646-6.236-7.53v21.884h-1v-21.883z" /></svg>
                    </a>
                </div>
            </div>

        </footer> <!-- end s-footer -->

    </div> <!-- end -s-pagewrap -->
    <!-- Java Script
    ================================================== -->
    <script src="~/Templates/luther-1.0.0/js/plugins.js"></script>
    <script src="~/Templates/luther-1.0.0/js/main.js"></script>

</body>
</html>
